{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "outDir": "__js__",
        "rootDir": ".",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noEmitOnError": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "typeRoots": [ "./node_modules/@types" ]
    },
    "exclude": [
        "dist",
        "node_modules"
    ],
    "awesomeTypescriptLoaderOptions": {
        "useWebpackText": true
    },
    "compileOnSave": false,
    "buildOnSave": false,
    "atom": { "rewriteTsconfig": false }
}
